{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "pretty": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "global.d.ts"
    ],
    "paths": {
      "@components": ["./src/components"],
      "@data": ["./src/data"],
      "@utils": ["./src/utils"],
      "@hooks": ["./src/hooks"],
      "@stores": ["./src/stores"],
      "@assets": ["./src/assets"],
      "@api": ["./src/api"],
      "@components/*": ["./src/components/*"],
      "@utils/*": ["./src/utils/*"],
      "@data/*": ["./src/data/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@stores/*": ["./src/stores/*"],
      "@assets/*": ["./src/assets/*"],
      "@yoc-types/*": ["./types/*"]
    }
  },
  "include": [
    "src",
    "types",
    "global.d.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ],
  "compileOnSave": false
}
